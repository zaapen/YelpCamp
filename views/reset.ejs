<% include ./partials/header %>

<div class="row">
    <h1 style="text-align: center;">Change Password</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label for="password">New Password</label>
                <input class="form-control" type="password" name="password" placeholder="New Password" autofocus="autofocus">    
            </div>
            <div class="form-group">
                <label for="password">Confirm Password</label>
                <input class="form-control" type="password" name="confirm" placeholder="Confirm Password" autofocus="autofocus">    
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Update Password</button>   
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./partials/footer %>